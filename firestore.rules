rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if the requesting user is an admin
    function isAdmin() {
      return request.auth != null && exists(/databases/$(database)/documents/users/$(request.auth.uid)) && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    match /users/{userId} {
      allow read;
      allow create: if request.auth.uid != null;
      allow delete: if request.auth.uid != null;
      
      // Allow update if:
      // 1. User is updating their own doc AND NOT touching sensitive fields (plan, isAdmin, isBanned)
      //    AND if touching dailyMessageCount, it must be an increment of 1.
      // 2. OR Admin
      // 3. OR User updating only savedChats (legacy/backup rule)
      allow update: if (request.auth.uid == userId && 
                        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['plan', 'isAdmin', 'isBanned']) &&
                        (
                          !request.resource.data.diff(resource.data).affectedKeys().hasAny(['dailyMessageCount']) ||
                          (
                            (!('dailyMessageCount' in resource.data) && request.resource.data.dailyMessageCount == 1) ||
                            ('dailyMessageCount' in resource.data && request.resource.data.dailyMessageCount == resource.data.dailyMessageCount + 1)
                          )
                        ))
                    || isAdmin()
                    || (request.auth.uid != null && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['savedChats']));
    }

    match /usernames/{username} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.uid == request.auth.uid;
    }
    
    match /friendRequests/{requestId} {
      allow read, list: if request.auth != null && (resource.data.senderId == request.auth.uid || resource.data.receiverId == request.auth.uid);
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow update: if request.auth != null && resource.data.receiverId == request.auth.uid;
      allow delete: if request.auth != null && (resource.data.senderId == request.auth.uid || resource.data.receiverId == request.auth.uid);
    }

    match /config/settings {
       allow read: if request.auth.uid != null;
       allow write: if isAdmin();
    }
    
    match /analytics/summary {
      allow read: if request.auth != null;
      allow write: if isAdmin(); 
    }

    match /broadcasts/{broadcastId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }

    match /chats/{chatId}/messages/{messageId} {
      allow read: if request.auth.uid in chatId.split('_');
      allow update, delete: if request.auth.uid == resource.data.senderId;
      
      allow create: if
        request.auth.uid != null 
        && request.resource.data.senderId == request.auth.uid
        && (
           // 1. Check if user is banned (default to false if field missing)
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('isBanned', false) != true
        )
        && (
           // 2. Check Plan & Limits
           // If config missing, fail open (allow)
           !exists(/databases/$(database)/documents/config/settings)
           ||
           // If user has a paid plan (not 'free'), allow
           get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('plan', 'free') != 'free'
           ||
           // If free plan, check daily limit
           (
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.get('dailyMessageCount', 0)
             < get(/databases/$(database)/documents/config/settings).data.dailyFreeLimit
           )
        );
    }
  }
}